{
    "compilerOptions": {
        "rootDir": "./src",
        "baseUrl": "./src",
        "strict": true,
        "lib": [
            "dom",
            "es2018",
            "esnext.asynciterable",
            "esnext.array"
        ],
        "jsx": "react",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true
    },
    "include": [
        "./src/*",
        "**/.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}